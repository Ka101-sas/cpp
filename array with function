#include <iostream>

using namespace std;

int printarray(int array[],int size)
{
    for(int i=0;i<size;i++){
        cout<<array[i]<<endl;
    }
    return 0;
}

int main()
{ //intializing 0 at all indexes
  int second[7]={0};
  int n=10;
  printarray(second,7);
  
  
  //intializing all locations with 1      
  int third[7]={1};
  n=10;
  printarray(third,7);     
  return 0;
} 
